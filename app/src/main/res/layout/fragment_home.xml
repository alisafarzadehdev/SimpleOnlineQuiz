<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView44444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/iransansbold"
            android:text="روز شمار اشتراک"
            android:textColor="#222222"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView66666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="12"
            android:textSize="22sp"
            android:textColor="#229922"
            android:fontFamily="@font/iransansbold"
            app:layout_constraintBottom_toBottomOf="@+id/textView44444"
            app:layout_constraintEnd_toStartOf="@+id/textView44444"
            app:layout_constraintTop_toTopOf="@+id/textView44444" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="افزایش اشتراک"
            android:textSize="16sp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/iransansbold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView44444" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="روز"
            android:textSize="16sp"
            android:textColor="#222222"
            android:fontFamily="@font/iransansbold"
            app:layout_constraintBottom_toBottomOf="@+id/textView66666"
            app:layout_constraintEnd_toStartOf="@+id/textView66666"
            app:layout_constraintTop_toTopOf="@+id/textView66666" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>